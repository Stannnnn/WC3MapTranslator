{
    "compilerOptions": {
        "composite": true,
        "types": [
            "mocha",
            "node"
        ],
        "traceResolution": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "noEmit": false,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["test/**/*.ts"]
}